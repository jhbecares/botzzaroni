#ifndef STATE_H_
#define STATE_H_


typedef enum { // Puede que falten estados, pero de momento se me
		   // ocurren estos
  INIT, // se estan inicializando las cosas
  ESPERA_NUM_1, // se espera que el usuario introduzca el primer numero
  ESPERA_OP, // se ha introducido el primer num y se espera que se
		   // introduzca la operacion que se quiere realizar (+,-,*)
  ESPERA_NUM_2, // se han introducido el primer numero y la op y se
			 // esta esperando el segundo numero
  ESPERA_CONFIRMACION, // estamos esperando a que el usuario pulse el =
  MOSTRAR_RESULT, // se ha introducido todo lo necesario para realizar
			   // una operacion y se esta mostrando el resultado en
			   // el display
  MOSTRAR_SECUENCIA_ERROR, // se ha introducido un valor erroneo o se
					 // ha pulsado algo que no se deberia pulsar
					 // y estamos mostrando un mensaje
					 // predefinido de error
  RESTART // esto es necesario para hacer alguna cosa extra o vale con
		// el INIT?
} State;

#endif /* STATE_H_ */
