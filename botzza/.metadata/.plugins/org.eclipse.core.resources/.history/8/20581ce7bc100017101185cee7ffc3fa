#import "mainstates.h"

extern void D8Led_symbol(int value);
extern void init_ISR();

extern State;

State state;

uint8 old_addr;
uint8 addr;
uint8 bytes;

State get_current_state() {
	return state;
}

void set_current_state(State new_state) {
	state = new_state;
}

void initialize() {

	init_ISR();

	// Inicialización del teclado matricial
	D8Led_symbol(0);

	DelayMs(100);

	old_addr=0;

	set_current_state(S0);
}


void reset_everything() {
	set_current_state(S0);
}
