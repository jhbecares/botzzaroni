Phase:	dateSpanish
Input: Token Lookup
Options: control = appelt
//Options: control = brill

/////////////////////////////////////////////////

Macro: DAY_NAME 
({Lookup.majorType == dias })

Macro: ONE_DIGIT
({Token.majorType == numero, Token.length == "1"})

Macro: TWO_DIGIT
({Token.majorType == numero, Token.length == "2"})

Macro: FOUR_DIGIT
({Token.majorType == numero, Token.length == "4"})

Macro: DAY_MONTH_NUM
(ONE_DIGIT | TWO_DIGIT)

Macro: DATE_PRE
// possible modifiers of dates, eg. "early October"
({Token.string == "principios"}|
 {Token.string == "comienzos"}|
 {Token.string == "finales"}|
 {Token.string == "mediados"}
)

Macro: DAY 
(((DATE_PRE)?
  DAY_NAME) |
 DAY_MONTH_NUM)

Macro: MONTH_NAME
( (DATE_PRE)?
  {Lookup.minorType == month})

Macro: MONTH 
(MONTH_NAME | DAY_MONTH_NUM)

Macro: SLASH
  ({Token.string == "/"})
  
Macro: DASH
  {Token.string == "-"}

Macro: DOT
  {Token.string == "."}

Macro: OF
  ({Token.string == "de"}|
   {Token.string == "del"})


Macro: YEAR
(        
 {Lookup.majorType == year}|
 TWO_DIGIT | FOUR_DIGIT | 
 {Token.string == "'"}
 (TWO_DIGIT)
)


Macro: ORDINAL
(
   ({Token.string ==~ "[0-9][0-9]?(o|Âº|a|Âª|er|ero|era)"}
    |
   {Lookup.minorType == ordinal})
   ( ({Token.string == "de"} | 
      {Token.string == "del"}))?
)

Macro: NUM_OR_ORDINAL
  (ORDINAL | DAY_MONTH_NUM)


Macro: COMMA
({Token.string == ","})

Macro: SPACE
({Token.string == " "})

Macro: TIME_DIFF
(
 ({Token.string == "+"}|{Token.string == "-"})
