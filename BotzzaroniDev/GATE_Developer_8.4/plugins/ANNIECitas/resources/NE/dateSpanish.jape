// Time Rules 

Rule: Hora1
// 8:14 am
// 4.34 pm
// 6am
(
(ONE_DIGIT|TWO_DIGIT)
(({Token.string == ":"}|{Token.string == "."} |{Token.string == "-"} )
  TWO_DIGIT)?
({Token.string == " "})+
(TIME_AMPM)
)
:dateSpanish
-->
:dateSpanish{
System.out.println("______________ rule Hora1 ");
},
:dateSpanish.TempDate = {kind = "dateSpanish", rule = "dateSpanish"}

