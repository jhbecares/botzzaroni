 then
 
 	String[] a = msgg.split(" ");
 	
 	for(int i = 0; i < a.length; i++){
 		String msgg2 = a[i];
 		if(msgg2.equalsIgnoreCase("Kitkat") || msgg2.equalsIgnoreCase("KitKat")){
    		pizza.addIngrediente("kitkat");
    	}else if(msgg2.equalsIgnoreCase("cebolla")){
