rule "Recibir fecha con dia, mes, año"
salience 500
when
    obGeneral:ObtenerEntrega(state == Objetivo.PENDING)
    ob: ObtenerDiaEntrega(state == Objetivo.PENDING)
    notif:Notificacion(identInterlc:identNotificador, tipoNotificacion == tipoNotif.miDia)
    notif2:Notificacion(identInterlc:identNotificador, tipoNotificacion == tipoNotif.miMes)
    notif3:Notificacion(identInterlc:identNotificador, tipoNotificacion == tipoNotif.miYear)
    sdf:SimpleDateFormat()
then
    GregorianCalendar gc = sdf.getCalendar();
    gc.set(Calendar.YEAR, Integer.parseInt(notif3.getMensajeNotificacion()));
    gc.set(Calendar.MONTH, Integer.parseInt(notif2.getMensajeNotificacion())-1); // cuidado, HAY QUE RESTAR UNO, van de 0 a 11
    gc.set(Calendar.DAY_OF_MONTH, Integer.parseInt(notif.getMensajeNotificacion());
    sdf.setCalendar(gc);
    
    update(sdf);
    
    
    ob.setSolved();
    update(ob);
    
    System.out.println("fecha reconocida: " + sdf.format(calendar.getTime()));
    
    // TODO comprobar si hay que hacer algo mas
    
    retract(notif);
    retract(notif2);
    retract(notif3);
end

